<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>管理者ログイン</h4>
    </div>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mb-3">
    <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row mb-3">
    <%= f.label "パスワード", class:"col-md-2 offset-md-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= f.submit "管理者ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<%= render "admin/shared/links" %>
