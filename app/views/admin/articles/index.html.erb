<h1>admin/articles#indexページ</h1>
<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">記事一覧</h4>
  </div>

  <div class="row justify-content-end">
    <%= link_to new_admin_article_path do %>
    <i class="fas fa-plus-circle fa-2x" style="color: #bfc5cf;"></i>
    <% end %>
  </div>

   <div class="row">
        <div class="col-md-4">
            <!--<div class="card mb-4 shadow-sm">-->
            <% @articles.each do |article| %>
              <a href="/articles/<%= article.id %>" class="card h-100 m-0"></a>
              <div class="card">
                <div class="bd-placeholder-img card-img-top">
                  <%= link_to article_path(article) do %>
                  <p class="img-wrap">
                  <% if article.images.present? %>
                    <% article.images.each do |image| %>
                      <%= image_tag image.variant( resize: "150x150" ).processed %>
                    <% end %>
                    <%= image_tag article.images.first.variant( resize: "150x150" ).processed %>
                  <% else %>
                      <%= image_tag 'default_image.jpg' %>
                  <% end %>
                  </p>
                  <% end %>
                </div>
                <div class="card-body">
                  <p class="article-details card-text"><%= article.content.truncate(15) %></p>
                </div>
              </div>
            <% end %>
            <div class="row justify-content-lg-center">
               <%= paginate @articles %>
           </div>
          </div>
        </div>
</div>