<div class="container">
  <div class="row my-3">
    <h4 class="col-lg-auto bg-light text-center">記事一覧</h4>
  </div>

  <div class="row justify-content-lg-center">
    <table class="table table-borderless table-hover table-inverse border-top border-bottom">
      <thead class="thead-light">
        <tr>
          <th>記事ID</th>
          <th>タイトル</th>
          <th>ユーザーネーム</th>
        </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                  <td><%= article.id %></td>
                  <td><%= link_to article_path(article) do %>
                  <%= article.title %>
                  <% end %>
                  </td>
                  <td><%= article.user.name %></td>
            <% end %>
        </tbody>
    </table>
      <div class="row justify-content-lg-center">
        <%= paginate @articles %>
      </div>
  </div>
</div>