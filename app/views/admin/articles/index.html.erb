<h1>admin/articles#indexページ</h1>
<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">記事一覧</h4>
  </div>

  <div class="row justify-content-end">
    <%= link_to new_admin_article_path do %>
    <i class="fas fa-plus-circle fa-2x" style="color: #bfc5cf;"></i>
    <% end %>
  </div>

   <div class="row">
     <div>
       <h4 class="col-lg-auto text-center">投稿一覧(全<#%=@articles.count %>件)</h4>
     </div>
   </div>
     <div class="row">
       <% @articles.each do |article| %>
       <div class="col-md-4">
         <div class="card mb-4 shadow-sm">
           <%= link_to article_path(article) do %>
           <p class="img-wrap"><%= image_tag article.get_article_image(200,200) %></p>
           <% end %>
           <div class="card-body">
             <p class="article-details card-text"><%= article.content %></p>
           </div>
           <!--<div class="d-flex justify-conten-between align-items-center">-->
             <!--<div class="btn-group">-->
             <!--  <button type="button" class="btn btn-sm-outline-secondary">続きを見る</button> <!-- 要リンク -->-->
             <!--</div>-->
           <!--</div>-->
         </div>
       </div>
       <% end %>
     </div>
   </div>
</div>