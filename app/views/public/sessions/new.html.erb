<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>ログイン</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, autofocus: true, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
      <%= f.password_field :password, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.submit "ログイン", class:"col-md-2 offset-md-2 btn btn-primary" %>
      <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post, class:"col-md-2 offset-md-1 btn btn-secondary" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col offset-md-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>
    <div class="row mb-5">
      <div class="col offset-md-2">
        <%= render "public/shared/links" %>
      </div>
    </div>
  <% end %>
</div>


<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h4>新規会員登録</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row mb-3">
      <%= f.label "ユーザーネーム", class:"col-md-2 offset-md-1" %>
      <%= f.text_field :name, autofocus: true, placeholder: "username", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %>
      <%= f.email_field :email, placeholder: "example@email.com", class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.label "パスワード確認用", class:"col-md-2 offset-md-1" %>
      <%= f.password_field :password_confirmation, class:"col-md-2 form-control" %>
    </div>
    <div class="row mb-3">
      <%= f.submit "新規登録", class:"col-md-2 offset-md-2 btn btn-success" %>
    </div>
  <% end %>
</div>

<%= render "public/shared/links" %>
