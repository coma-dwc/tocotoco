<!--<h2>publicの新規投稿画面</h2>-->
<div class="container">
  <div class="row">
    <h4 class="col-lg-auto text-center">新規記事投稿</h4>
  </div>

  <div class="row justify-content-lg-center">
    <div class="col-lg-10">
      <%= form_with model: @article, url: articles_path, method: :post do |f| %>

    <form>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">画像</label>
        <div class="col-sm-8">
        <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">タイトル</label>
        <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control-file", placeholder: "タイトル" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">本文</label>
        <div class="col-sm-8">
        <%= f.text_area :content, class: "form-control-file", placeholder: "ここに本文を記述します" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">都道府県</label>
        <div class="col-sm-8">
        <#%= f.select :place_id, options_from_collection_for_select(Place.all, :prefectures),  { include_blank: "--選択してください--" }, class: "form-control" %>
      </div>
      </div>

       <div class="form-group row justify-content-center">
        <%= f.submit "新規投稿", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>

</div>