<h1>public/articles#indexページ</h1>
<h2>publicの投稿一覧画面</h2>

<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">記事一覧</h4>
  </div>

   <div class="row">
     <div>
       <h4 class="col-lg-auto text-center">投稿一覧(全<%=@articles.count %>件)</h4>
     </div>
     <div class="row">
       <% @articles.each do |article| %>
       <div class="col-md-4">
         <div class="card mb-4 shadow-sm">
           <%= link_to article_path(article) do %>
           <p class="img-wrap">
             <% if article.images.present? %>
             <% article.images.each do |image| %>
               <%= image_tag image.variant( resize: "150×150" ) %>
             <% end %>

             <% else %>
               <%= image_tag "default_image.jpg" %>
              <% end %>
           </p>
           <% end %>
           <div class="card-body">
             <p class="article-details card-text"><%= article.content.truncate(15) %></p>
           </div>
         </div>
       </div>
       <% end %>
     </div>
     <div class="row justify-content-lg-center">
       <%= paginate @articles %>
     </div>
   </div>
</div>