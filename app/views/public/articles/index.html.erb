<div class="container">
  <div class="row">
    <h4 class="col-lg-auto text-center">記事一覧</h4>
  </div>
  <div>
  <%= render 'search', q: @q, url: articles_path %> <!--検索フォーム-->
  </div>

   <div class="row">
     <div>
       <h5 class="col-lg-auto text-center">投稿一覧(全<%=@articles.count %>件)</h5>
     </div>
     <div class="row">
       <% @articles.each do |article| %>
       <div class="col-md-4">
         <div class="card mb-4 shadow-sm">
           <%= link_to article_path(article) do %>
           <p class="card-img-top">
             <% if article.images.attached? %>
             <% article.images.each do |image| %>
               <%= image_tag image.variant( resize: "150x150" ).processed %>
             <% end %>

             <% else %>
               <%= image_tag "no_image.jpg" %>
              <% end %>
           </p>
           <% end %>
           <div class="card-body">
             <p class="article-details card-text"><%= article.content.truncate(15) %></p>
           </div>
         </div>
       </div>
       <% end %>
     </div>
   </div>
   <div class="row justify-content-lg-center">
       <%= paginate @articles %>
    </div>
</div>