<div class="container"><!--usersフォルダからarticlesフォルダに移動-->
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">ブックマーク一覧</h4>
  </div>

  <div class="row">
     <div>
       <h4 class="col-lg-auto text-center">ブックマーク一覧(全<%=@bookmarks.count %>件)</h4>
     </div>
     <div class="row">
       <% @bookmarks.each do |bookmark| %>
       <div class="col-md-4">
         <div class="card mb-4 shadow-sm">
           <%= link_to article_bookmark_path(bookmark) do %>
           <p class="img-wrap">
             <% if bookmark.article.images.attached? %>
             <% bookmark.article.images.each do |image| %>
               <%= image_tag image.variant( resize: "150x150" ).processed %>
             <% end %>

             <% else %>
               <%= image_tag "no_image.jpg" %>
              <% end %>
           </p>
           <% end %>
           <div class="card-body">
             <p class="article-details card-text"><%= bookmark.article.content.truncate(15) %></p>
           </div>
         </div>
       </div>
       <% end %>
     </div>
     <div class="row justify-content-lg-center">
       <%= paginate @bookmarks %>
     </div>
   </div>
</div>