<div class="container">
  <div class="row">
    <h4 class="heading col-lg-auto mt-3 text-center">記事編集</h4>
  </div>

  <div class="row justify-content-lg-center">
    <div class="col-lg-10">
      <%= form_with model: @article, url: article_path, method: :patch do |f| %>

    <form>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">タイトル</label>
        <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control-file", placeholder: "タイトル" %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">画像（複数投稿可）</label>
        <div class="col-sm-8">
        <%= f.file_field :images, multiple: true %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">本文</label>
        <div class="col-sm-8">
        <%= f.text_area :content, class: "form-control-file", placeholder: "ここに本文を記述します", rows: 10 %>
      </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-4 col-form-label">都道府県</label>
        <div class="col-sm-8">
        <%= f.select :place_id, options_from_collection_for_select(Place.all, :id, :prefectures, f.object.place_id),  { include_blank: "--選択してください--" }, class: "form-control" %>
      </div>
      </div>

      <!--<div class="form-group row">-->
      <!--  <label class="col-sm-4 col-form-label">ハッシュタグ入力欄</label>-->
      <!--  <div class="col-sm-8">-->
      <!--  <%#= f.text_area :hashbody, size:"55x3" %>-->
      <!--  </div>-->
      <!--  </div>-->

      <div class="form-group row justify-content-center">
        <%= f.submit "編集", class: "btn btn-success" %>
      </div>
    </form>
    </div>
  </div>
      <% end %>
</div>