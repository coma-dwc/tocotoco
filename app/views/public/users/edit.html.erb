<%#= form_with model: @user, url: user_path(@user.id) do |f| %>
   <div class="container">
     <div class="row">
        <h4 class="heading col-lg-auto mt-3 text-center"><%= @user.name %>さんのユーザー情報編集</h4>
     </div>

     <div class="row justify-content-lg-center mt-3">
       <div class="col-lg-10">
         <%= form_with model: @user, url: user_path(@user.id) do |f| %>

         <form>
          <div class="form-group row">
           <label class="col-sm-4 col-form-label">プロフィール画像</label>
           <div class="col-sm-8">
             <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          </div>

          <div class="form-group row">
           <label class="col-sm-4 col-form-label">メールアドレス</label>
           <div class="col-sm-8">
             <%= f.text_field :email, class: "form-control-file" %>
          </div>
          </div>

          <div class="form-group row">
           <label class="col-sm-4 col-form-label">ニックネーム</label>
           <div class="col-sm-8">
             <%= f.text_field :name, class: "form-control-file" %>
          </div>
          </div>

          <div class="form-group row">
           <label class="col-sm-4 col-form-label">自己紹介文</label>
           <div class="col-sm-8">
             <%= f.text_area :introduction, class: "form-control-file", rows: 10 %>
          </div>
          </div>

           <div class="form-group row justify-content-center">
             <%= f.submit '変更を保存', class: "btn btn-success" %>
           </div>
          </form>

          <div class="row">
           <div class="col-sm-8">
            <p>退会希望の方はこちら</p><%= link_to "退会する", users_unsubscribe_path, class: "btn btn-sm btn-danger" %>

           </div>
          </div>
      </div>
    </div>
    <% end %>
   </div>