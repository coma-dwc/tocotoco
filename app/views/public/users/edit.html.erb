<%= form_with model: @user, url: user_path(@user.id) do |f| %>
   <div class="container">
     <div class="row">
        <h4><%= @user.name %>さんのユーザー情報編集</h4>
         <table class="table table-borderless">
          <tr>
           <td>プロフィール画像</td>
           <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
           <td>メールアドレス</td>
           <td><%= f.text_field :email %></td>
          </tr>
          <tr>
           <td>ニックネーム</td>
           <td><%= f.text_field :name %></td>
          </tr>
          <tr>
           <td>自己紹介文</td>
           <td><%= f.text_area :imtroduction %></td>
          </tr>
          <tr>

           <tr>
            <td></td>
            <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
            <td><div class="col-md-3"><%= link_to "退会する", users_unsubscribe_path, class: "btn btn-sm btn-danger" %></div></td>
           </tr>
          </table>
      </div>
    </div>
    <% end %>