<div class="container">
  <div class="row">
    <h4 class="col-lg-auto bg-light text-center">ブックマーク一覧</h4>
  </div>

  <div class="row">
    <div class="col-lg-auto text-center">
      <% @bookmarks.each do |bookmark| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= link_to article_path(article.id) do %>
          <p class="img-wrap"><%= image_tag article.get_image(200,200) %></p>
          <% end %>
          <div class="card-body">
            <p class="article-details card-text"><%= article.content %></p>
          </div>
          <div class="d-flex justify-conten-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm-outline-secondary">続きを見る</button> <!-- 要リンク -->
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>