 <% if article.bookmarked_by?(current_user) %>
   <%= link_to article_bookmarks_path(article), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark"></i>
    ブックマーク解除
    <% end %>
 <% else %>
   <%= link_to article_path(article), method: :post, remote: true do %>
   <i class="fa-regular fa-bookmark"></i>
   ブックマークする
   <% end %>
 <% end %>