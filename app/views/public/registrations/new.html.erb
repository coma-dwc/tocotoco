<%= flash[:alert] %>
<div class="container">
  <div class="row mb-3">
      <h4 class="heading col-lg-auto text-center my-3">新規ユーザー登録</h4>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row mb-3">
    <%= f.label "ユーザーネーム", class:"col-md-2 offset-md-1" %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "username", class:"col-md-2 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label "メールアドレス", class:"col-md-2 offset-md-1" %><br />
    <%= f.email_field :email, placeholder: "example@email.com", class:"col-md-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label "パスワード", class:"col-md-2 offset-md-1" %>
    <% if @minimum_password_length %>
    <%= f.password_field :password, class:"col-md-2 form-control", autocomplete: "new-password" %>
    <em>(<%= @minimum_password_length %> 文字以内)</em>
    <% end %>

  </div>

  <div class="row mb-3">
    <%= f.label "パスワード確認用", class:"col-md-2 offset-md-1" %><br />
    <%= f.password_field :password_confirmation, class:"col-md-2 form-control", autocomplete: "new-password" %>
  </div>

  <div class="row mb-3">
    <%= f.submit "新規登録", class:"col-md-2 offset-md-2 btn btn-success" %>
  </div>
<% end %>
</div>
