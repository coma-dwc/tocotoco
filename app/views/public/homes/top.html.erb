<h1>public/homes#topページ</h1>
<div class="container">
  <div class="row mb-5">
    <div class="mx-auto col-md-4">
      <!-- スライドショーを入れる位置 -->
    </div>
  </div>

  <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <%= link_to 'ゲストログイン（閲覧用）', users_guest_session_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
        <div class="row">
          <%= link_to 'ログイン',new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
        </div>
        <div class="row">
          <%= link_to '新規登録',new_user_registration_path, class: "btn btn-success btn-sm btn-block sign_up" %>
        </div>
      </div>

      <div class="row mb-5">
        <div class="col col-md-4">
          <h3>Topic<br >
          <small>新着記事</small></h3>
          <!-- 新着投稿（カード）を入れる位置 -->
          <% @articles.first(3).each do |article| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <%= link_to article_path(article) do %>
              <p class="img-wrap"><%= image_tag article.get_image(200,200) %></p>
              <% end %>
              <div class="card-body">
                <p class="article-details card-text"><%= article.content %></p>
              </div>
              <div class="d-flex justify-conten-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm-outline-secondary">続きを見る</button> <!-- 要リンク -->
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
</div>