<h1>public/homes#topページ</h1>
<div class="container">
  <div class="row mb-5">
    <div class="mx-auto col-md-4">
      <!-- スライドショーを入れる位置 -->
    </div>
  </div>

      <div class="row mb-5">
        <div class="col col-md-4">
          <h3>Topic<br >
          <small>新着記事</small></h3>
        </div>
          <!-- 新着投稿（bootstrapカード）を入れる位置 -->
          <div class="col-md-4">
            <!--<div class="card mb-4 shadow-sm">-->
            <% @articles.each do |article| %>
              <a href="/articles/<%= article.id %>" class="card h-100 m-0"></a>
              <div class="card">
                <div class="bd-placeholder-img card-img-top">
                  <%= link_to article_path(article) do %>
                  <p class="img-wrap">
                  <% if article.images.attached? %>
                    <%# article.images.each do |image| %>
                      <%#= image_tag image.variant( resize: "150x150" ).processed %>
                    <%# end %>
                    <%= image_tag article.images.first.variant( resize: "150x150" ).processed %>
                  <% else %>
                      <%= image_tag 'no_image.jpg' %>
                  <% end %>
                  </p>
                  <% end %>
                </div>
                <div class="card-body">
                  <p class="article-details card-text"><%= article.content.truncate(15) %></p>
                </div>
              </div>
            <% end %>
          <p class="text-right">
            <%= link_to "その他の記事を見る", articles_path %>
          </p>
          </div>
      </div>
</div>